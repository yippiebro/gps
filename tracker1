                    <div class="card-title">
                        <i class="fas fa-map-marked-alt"></i>
                        <h2>位置マップ</h2>
                    </div>
                    
                    <div id="mapStatus" class="status-message">
                        <i class="fas fa-info-circle"></i>
                        <span id="mapStatusText">簡易オフラインマップ</span>
                    </div>
                    
                    <div class="map-container">
                        <div id="offlineMap">
                            <div class="map-grid"></div>
                            <div id="mapMarker" class="map-marker hidden"></div>
                            <div id="accuracyCircle" class="accuracy-circle hidden"></div>
                            <div id="compass" class="compass hidden">
                                <i class="fas fa-compass"></i>
                            </div>
                        </div>
                    </div>
                    
                    <div class="coordinates-display mt-20">
                        <div class="coordinate-item">
                            <span class="coordinate-label">
                                <i class="fas fa-home"></i>
                                推定住所:
                            </span>
                            <span id="address" class="coordinate-value">位置情報を取得してください</span>
                        </div>
                    </div>
                </div>
                
                <!-- オフライン情報カード -->
                <div class="card">
                    <div class="card-title">
                        <i class="fas fa-database"></i>
                        <h2>オフライン情報</h2>
                    </div>
                    
                    <div class="coordinates-display">
                        <div class="coordinate-item">
                            <span class="coordinate-label">
                                <i class="fas fa-hdd"></i>
                                キャッシュサイズ:
                            </span>
                            <span id="cacheSize" class="coordinate-value">計算中...</span>
                        </div>
                        <div class="coordinate-item">
                            <span class="coordinate-label">
                                <i class="fas fa-map-pin"></i>
                                保存位置数:
                            </span>
                            <span id="savedLocationsCount" class="coordinate-value">0</span>
                        </div>
                        <div class="coordinate-item">
                            <span class="coordinate-label">
                                <i class="fas fa-sync-alt"></i>
                                最終更新:
                            </span>
                            <span id="lastUpdate" class="coordinate-value">--:--:--</span>
                        </div>
                        <div class="coordinate-item">
                            <span class="coordinate-label">
                                <i class="fas fa-memory"></i>
                                使用メモリ:
                            </span>
                            <span id="memoryUsage" class="coordinate-value">-- MB</span>
                        </div>
                    </div>
                    
                    <div class="button-group">
                        <button id="clearCacheBtn" class="btn btn-danger">
                            <i class="fas fa-broom"></i>
                            キャッシュ削除
                        </button>
                        <button id="exportDataBtn" class="btn btn-primary">
                            <i class="fas fa-file-export"></i>
                            データ出力
                        </button>
                        <button id="importDataBtn" class="btn btn-secondary">
                            <i class="fas fa-file-import"></i>
                            データ入力
                        </button>
                    </div>
                </div>
            </div>
        </main>
        
        <!-- フッター -->
        <footer>
            <p><strong>© 2024 オフラインGPS Tracker - 完全統合版</strong></p>
            <p>このアプリはService Workerを使用してオフラインでも動作します。完全オフライン対応の位置情報取得アプリケーションです。</p>
            <p>対応ブラウザ: Chrome 60+, Firefox 55+, Safari 11.1+, Edge 79+</p>
        </footer>
    </div>
    
    <!-- 通知 -->
    <div id="notification" class="notification hidden">
        <div id="notificationIcon" class="notification-icon">
            <i class="fas fa-info-circle"></i>
        </div>
        <div class="notification-content">
            <h4 id="notificationTitle">通知</h4>
            <p id="notificationMessage">メッセージ内容</p>
        </div>
    </div>
    
    <!-- データ入力モーダル（非表示） -->
    <div id="importModal" class="hidden" style="position: fixed; top: 0; left: 0; width: 100%; height: 100%; background: rgba(0,0,0,0.5); z-index: 10001; display: flex; align-items: center; justify-content: center;">
        <div style="background: white; padding: 30px; border-radius: 15px; max-width: 500px; width: 90%;">
            <h3 style="margin-bottom: 20px;">GPSデータの入力</h3>
            <textarea id="importDataText" placeholder="ここにJSONデータを貼り付けてください..." style="width: 100%; height: 200px; padding: 15px; border: 2px solid var(--border); border-radius: 10px; font-family: monospace; margin-bottom: 20px;"></textarea>
            <div style="display: flex; gap: 15px;">
                <button id="confirmImportBtn" class="btn btn-success" style="flex: 1;">データを入力</button>
                <button id="cancelImportBtn" class="btn btn-danger" style="flex: 1;">キャンセル</button>
            </div>
        </div>
    </div>

    <!-- メインJavaScript -->
    <script>
        // ===== オフラインGPSトラッカー - 完全統合版 =====
        class OfflineGPSTracker {
            constructor() {
                this.currentPosition = null;
                this.trackingInterval = null;
                this.isOnline = navigator.onLine;
                this.watchId = null;
                this.savedLocations = [];
                this.mapCenter = { lat: 35.681236, lng: 139.767125 }; // 東京駅
                this.mapZoom = 100000; // マップズームレベル
                this.isSimulatingOffline = false;
                this.init();
            }
            
            init() {
                console.log('オフラインGPSトラッカーを初期化中...');
                this.bindEvents();
                this.loadSavedData();
                this.updateConnectionStatus();
                this.initOfflineMap();
                this.setupServiceWorker();
                this.startBackgroundUpdates();
                this.showNotification('オフラインGPSアプリが起動しました', 'success');
            }
            
            bindEvents() {
                // ボタンイベント
                document.getElementById('getLocationBtn').addEventListener('click', () => this.getCurrentLocation());
                document.getElementById('startTrackingBtn').addEventListener('click', () => this.startTracking());
                document.getElementById('stopTrackingBtn').addEventListener('click', () => this.stopTracking());
                document.getElementById('saveLocationBtn').addEventListener('click', () => this.saveCurrentLocation());
                document.getElementById('clearHistoryBtn').addEventListener('click', () => this.clearHistory());
                document.getElementById('clearCacheBtn').addEventListener('click', () => this.clearCache());
                document.getElementById('exportDataBtn').addEventListener('click', () => this.exportData());
                document.getElementById('importDataBtn').addEventListener('click', () => this.showImportModal());
                document.getElementById('simulateOfflineBtn').addEventListener('click', () => this.toggleOfflineSimulation());
                document.getElementById('confirmImportBtn').addEventListener('click', () => this.importData());
                document.getElementById('cancelImportBtn').addEventListener('click', () => this.hideImportModal());
                
                // ネットワークイベント
                window.addEventListener('online', () => this.handleOnline());
                window.addEventListener('offline', () => this.handleOffline());
                
                // ウィンドウイベント
                window.addEventListener('beforeunload', () => this.saveBeforeUnload());
            }
            
            // 位置情報取得
            async getCurrentLocation() {
                this.showNotification('位置情報を取得中...', 'info');
                
                const options = {
                    enableHighAccuracy: this.isOnline && !this.isSimulatingOffline,
                    timeout: this.isOnline ? 10000 : 15000,
                    maximumAge: 0
                };
                
                if (navigator.geolocation) {
                    navigator.geolocation.getCurrentPosition(
                        (position) => this.handlePositionSuccess(position, 'manual'),
                        (error) => this.handlePositionError(error),
                        options
                    );
                } else {
                    this.showNotification('このブラウザは位置情報をサポートしていません', 'error');
                }
            }
            
            handlePositionSuccess(position, mode) {
                this.currentPosition = {
                    latitude: position.coords.latitude,
                    longitude: position.coords.longitude,
                    accuracy: position.coords.accuracy,
                    altitude: position.coords.altitude || null,
                    altitudeAccuracy: position.coords.altitudeAccuracy || null,
                    heading: position.coords.heading || null,
                    speed: position.coords.speed || null,
                    timestamp: position.timestamp,
                    mode: mode,
                    source: this.isSimulatingOffline ? 'simulated' : (this.isOnline ? 'online' : 'offline')
                };
                
                this.updateDisplay();
                this.updateMap();
                
                // オンライン時は逆ジオコーディング
                if (this.isOnline && !this.isSimulatingOffline) {
                    this.reverseGeocode(this.currentPosition.latitude, this.currentPosition.longitude);
                } else {
                    document.getElementById('address').textContent = 
                        this.isSimulatingOffline ? 
                        'シミュレーションモード中' : 
                        'オフライン: 住所情報は利用できません';
                }
                
                // ローカルストレージに保存
                this.saveToLocalStorage('lastPosition', this.currentPosition);
                
                // 追跡中でない場合は履歴に追加
                if (mode !== 'tracking') {
                    this.addToHistory(this.currentPosition);
                }
                
                this.showNotification('位置情報を取得しました', 'success');
            }
            
            handlePositionError(error) {
                let message = '位置情報の取得に失敗しました: ';
                
                switch(error.code) {
                    case 1:
                        message = '位置情報の利用が許可されていません。ブラウザの設定で位置情報を許可してください。';
                        break;
                    case 2:
                        message = '位置情報が利用できません。GPSがオフになっているか、利用できない環境です。';
                        this.useLastKnownPosition();
                        break;
                    case 3:
                        message = 'タイムアウトしました。もう一度お試しください。';
                        break;
                    default:
                        message = '不明なエラーが発生しました。';
                }
                
                // ステータスメッセージを更新
                const statusMsg = document.getElementById('statusMessage');
                statusMsg.className = 'status-message status-error';
                statusMsg.innerHTML = `<i class="fas fa-exclamation-circle"></i><span>${message}</span>`;
                
                this.showNotification(message, 'error');
            }
            
            useLastKnownPosition() {
                const lastPos = this.loadFromLocalStorage('lastPosition');
                if (lastPos) {
                    this.currentPosition = lastPos;
                    this.currentPosition.mode = 'offline-cached';
                    this.currentPosition.source = 'cached';
                    this.updateDisplay();
                    this.updateMap();
                    this.showNotification('キャッシュから最後の位置情報を表示しています', 'warning');
                }
            }
            
            // 追跡機能
            startTracking() {
                if (this.watchId) {
                    this.stopTracking();
                }
                
                const options = {
                    enableHighAccuracy: this.isOnline && !this.isSimulatingOffline,
                    maximumAge: 3000,
                    timeout: 10000
                };
                
                this.watchId = navigator.geolocation.watchPosition(
                    (position) => {
                        this.handlePositionSuccess(position, 'tracking');
                    },
                    (error) => this.handlePositionError(error),
                    options
                );
                
                document.getElementById('startTrackingBtn').disabled = true;
                document.getElementById('stopTrackingBtn').disabled = false;
                
                // ステータス更新
                const statusMsg = document.getElementById('statusMessage');
                statusMsg.className = 'status-message status-tracking';
                statusMsg.innerHTML = '<i class="fas fa-satellite"></i><span>位置追跡を開始しました</span>';
                
                // ステータスドット更新
                document.getElementById('onlineDot').className = 'status-dot tracking';
                
                this.showNotification('位置追跡を開始しました', 'success');
            }
            
            stopTracking() {
                if (this.watchId) {
                    navigator.geolocation.clearWatch(this.watchId);
                    this.watchId = null;
                }
                
                document.getElementById('startTrackingBtn').disabled = false;
                document.getElementById('stopTrackingBtn').disabled = true;
                
                // ステータスを元に戻す
                this.updateConnectionStatus();
                
                this.showNotification('位置追跡を停止しました', 'info');
            }
            
            // 履歴管理
            addToHistory(position) {
                const historyItem = {
                    ...position,
                    savedAt: new Date().toISOString(),
                    id: Date.now() + Math.random().toString(36).substr(2, 9)
                };
                
                this.savedLocations.unshift(historyItem);
                
                // 最大100件まで保存
                if (this.savedLocations.length > 100) {
                    this.savedLocations = this.savedLocations.slice(0, 100);
                }
                
                this.saveToLocalStorage('locationHistory', this.savedLocations);
                this.updateHistoryDisplay();
                this.updateStats();
            }
            
            saveCurrentLocation() {
                if (!this.currentPosition) {
                    this.showNotification('まず位置情報を取得してください', 'warning');
                    return;
                }
                
                const savedLocation = {
                    ...this.currentPosition,
                    savedAt: new Date().toISOString(),
                    name: `保存位置 ${this.savedLocations.length + 1}`,
                    id: Date.now() + Math.random().toString(36).substr(2, 9),
                    isBookmarked: true
                };
                
                this.savedLocations.unshift(savedLocation);
                this.saveToLocalStorage('locationHistory', this.savedLocations);
                this.updateHistoryDisplay();
                this.updateStats();
                
                this.showNotification('現在地を保存しました', 'success');
            }
            
            clearHistory() {
                if (this.savedLocations.length === 0) {
                    this.showNotification('履歴がありません', 'info');
                    return;
                }
                
                if (confirm('すべての位置履歴を削除しますか？この操作は元に戻せません。')) {
                    this.savedLocations = [];
                    localStorage.removeItem('locationHistory');
                    this.updateHistoryDisplay();
                    this.updateStats();
                    this.showNotification('履歴を削除しました', 'info');
                }
            }
            
            // 地図機能
            initOfflineMap() {
                const mapDiv = document.getElementById('offlineMap');
                const mapStatus = document.getElementById('mapStatusText');
                
                // 簡易グリッドマップの作成
                mapDiv.innerHTML = `
                    <div class="map-grid"></div>
                    <div id="mapMarker" class="map-marker hidden"></div>
                    <div id="accuracyCircle" class="accuracy-circle hidden"></div>
                    <div id="compass" class="compass hidden">
                        <i class="fas fa-compass"></i>
                    </div>
                `;
                
                mapStatus.textContent = '簡易オフラインマップを表示中';
            }
            
            updateMap() {
                if (!this.currentPosition) return;
                
                const marker = document.getElementById('mapMarker');
                const accuracyCircle = document.getElementById('accuracyCircle');
                const compass = document.getElementById('compass');
                const mapDiv = document.getElementById('offlineMap');
                
                const lat = this.currentPosition.latitude;
                const lng = this.currentPosition.longitude;
                
                // 座標をマップ座標に変換
                const x = (lng - this.mapCenter.lng) * this.mapZoom + mapDiv.clientWidth / 2;
                const y = (this.mapCenter.lat - lat) * this.mapZoom + mapDiv.clientHeight / 2;
                
                // 精度円の半径（ピクセル）
                const accuracyRadius = (this.currentPosition.accuracy || 50) * (this.mapZoom / 10000);
                
                // マーカーを更新
                marker.style.left = `${x}px`;
                marker.style.top = `${y}px`;
                marker.classList.remove('hidden');
                
                // 精度円を更新
                if (this.currentPosition.accuracy && this.currentPosition.accuracy < 1000) {
                    accuracyCircle.style.width = `${accuracyRadius * 2}px`;
                    accuracyCircle.style.height = `${accuracyRadius * 2}px`;
                    accuracyCircle.style.left = `${x - accuracyRadius}px`;
                    accuracyCircle.style.top = `${y - accuracyRadius}px`;
                    accuracyCircle.classList.remove('hidden');
                } else {
                    accuracyCircle.classList.add('hidden');
                }
                
                // コンパスを更新
                if (this.currentPosition.heading) {
                    compass.style.transform = `rotate(${this.currentPosition.heading}deg)`;
                    compass.classList.remove('hidden');
                } else {
                    compass.classList.add('hidden');
                }
                
                // マップステータス更新
                const mapStatus = document.getElementById('mapStatusText');
                if (this.isSimulatingOffline) {
                    mapStatus.textContent = 'シミュレーションモード';
                } else if (!this.isOnline) {
                    mapStatus.textContent = 'オフラインマップ';
                } else {
                    mapStatus.textContent = 'オンラインモード';
                }
            }
            
            // 逆ジオコーディング（オンライン時のみ）
            async reverseGeocode(lat, lng) {
                if (!this.isOnline || this.isSimulatingOffline) return;
                
                try {
                    // OpenStreetMap Nominatim APIを使用
                    const response = await fetch(
                        `https://nominatim.openstreetmap.org/reverse?format=json&lat=${lat}&lon=${lng}&zoom=18&addressdetails=1`,
                        {
                            headers: {
                                'User-Agent': 'OfflineGPSTracker/1.0',
                                'Accept-Language': 'ja'
                            }
                        }
                    );
                    
                    if (response.ok) {
                        const data = await response.json();
                        const address = data.display_name || '住所情報がありません';
                        document.getElementById('address').textContent = address.substring(0, 120);
                        
                        // 住所を保存
                        if (this.currentPosition) {
                            this.currentPosition.address = address;
                            this.saveToLocalStorage('lastPosition', this.currentPosition);
                        }
                    }
                } catch (error) {
                    console.warn('逆ジオコーディングに失敗:', error);
                    document.getElementById('address').textContent = '住所情報の取得に失敗';
                }
            }
            
            // 表示更新
            updateDisplay() {
                if (!this.currentPosition) return;
                
                const pos = this.currentPosition;
                const date = new Date(pos.timestamp);
                
                document.getElementById('latitude').textContent = pos.latitude.toFixed(6);
                document.getElementById('longitude').textContent = pos.longitude.toFixed(6);
                document.getElementById('accuracy').textContent = `${Math.round(pos.accuracy)} m`;
                document.getElementById('altitude').textContent = pos.altitude ? `${Math.round(pos.altitude)} m` : '--';
                document.getElementById('speed').textContent = pos.speed ? `${(pos.speed * 3.6).toFixed(1)} km/h` : '--';
                document.getElementById('timestamp').textContent = date.toLocaleTimeString();
                document.getElementById('mode').textContent = this.getModeText(pos.mode);
                
                // ステータスメッセージ更新
                const statusMsg = document.getElementById('statusMessage');
                if (pos.source === 'simulated') {
                    statusMsg.className = 'status-message status-offline';
                    statusMsg.innerHTML = '<i class="fas fa-flask"></i><span>シミュレーションモード - テストデータを使用中</span>';
                } else if (!this.isOnline || pos.source === 'offline') {
                    statusMsg.className = 'status-message status-offline';
                    statusMsg.innerHTML = '<i class="fas fa-wifi-slash"></i><span>オフライン - 低精度モードで動作中</span>';
                } else {
                    statusMsg.className = 'status-message status-online';
                    statusMsg.innerHTML = '<i class="fas fa-wifi"></i><span>オンライン - 高精度モード</span>';
                }
            }
            
            updateHistoryDisplay() {
                const historyDiv = document.getElementById('locationHistory');
                historyDiv.innerHTML = '';
                
                if (this.savedLocations.length === 0) {
                    historyDiv.innerHTML = '<div class="history-item text-center"><span>履歴はありません</span></div>';
                    return;
                }
                
                this.savedLocations.slice(0, 15).forEach((location, index) => {
                    const date = new Date(location.savedAt || location.timestamp);
                    const item = document.createElement('div');
                    item.className = 'history-item';
                    item.dataset.id = location.id;
                    
                    // アクティブな位置かチェック
                    if (this.currentPosition && 
                        Math.abs(this.currentPosition.latitude - location.latitude) < 0.0001 &&
                        Math.abs(this.currentPosition.longitude - location.longitude) < 0.0001) {
                        item.classList.add('active');
                    }
                    
                    item.innerHTML = `
                        <div class="history-info">
                            <div class="history-coords">${location.latitude.toFixed(6)}, ${location.longitude.toFixed(6)}</div>
                            <div class="history-time">
                                <i class="far fa-clock"></i>
                                ${date.toLocaleString()}
                            </div>
                        </div>
                        <div class="history-mode mode-${location.source || 'offline'}">
                            ${this.getModeText(location.mode || location.source)}
                        </div>
                    `;
                    
                    // クリックイベント
                    item.addEventListener('click', () => {
                        this.loadLocationFromHistory(location);
                    });
                    
                    historyDiv.appendChild(item);
                });
            }
            
            loadLocationFromHistory(location) {
                this.currentPosition = location;
                this.updateDisplay();
                this.updateMap();
                this.showNotification('履歴から位置を読み込みました', 'info');
            }
            
            updateStats() {
                // 保存位置数
                document.getElementById('savedLocationsCount').textContent = this.savedLocations.length;
                document.getElementById('lastUpdate').textContent = new Date().toLocaleTimeString();
                
                // キャッシュサイズの計算
                let totalSize = 0;
                for (let key in localStorage) {
                    if (localStorage.hasOwnProperty(key)) {
                        totalSize += (localStorage[key].length + key.length) * 2;
                    }
                }
                document.getElementById('cacheSize').textContent = `${(totalSize / 1024).toFixed(2)} KB`;
                
                // メモリ使用量（Performance APIが利用可能な場合）
                if (performance.memory) {
                    const usedMB = (performance.memory.usedJSHeapSize / 1048576).toFixed(2);
                    document.getElementById('memoryUsage').textContent = `${usedMB} MB`;
                }
            }
            
            // ネットワーク状態管理
            updateConnectionStatus() {
                const statusElem = document.getElementById('connectionStatus');
                const dotElem = document.getElementById('onlineDot');
                
                if (this.isSimulatingOffline) {
                    statusElem.textContent = 'シミュレーションモード';
                    dotElem.className = 'status-dot offline';
                } else if (this.isOnline) {
                    statusElem.textContent = 'オンラインで接続中';
                    dotElem.className = 'status-dot online';
                } else {
                    statusElem.textContent = 'オフライン（キャッシュ利用）';
                    dotElem.className = 'status-dot offline';
                }
            }
            
            handleOnline() {
                if (this.isSimulatingOffline) return;
                
                this.isOnline = true;
                this.updateConnectionStatus();
                this.showNotification('オンラインに接続しました', 'success');
            }
            
            handleOffline() {
                this.isOnline = false;
                this.updateConnectionStatus();
                this.showNotification('オフラインになりました。キャッシュを使用します。', 'warning');
            }
            
            toggleOfflineSimulation() {
                this.isSimulatingOffline = !this.isSimulatingOffline;
                
                if (this.isSimulatingOffline) {
                    // シミュレーションデータを生成
                    const simulatedPosition = {
                        latitude: 35.681236 + (Math.random() - 0.5) * 0.01,
                        longitude: 139.767125 + (Math.random() - 0.5) * 0.01,
                        accuracy: 25,
                        altitude: 45,
                        altitudeAccuracy: 10,
                        heading: Math.random() * 360,
                        speed: 1.5,
                        timestamp: Date.now(),
                        mode: 'simulated',
                        source: 'simulated'
                    };
                    
                    this.currentPosition = simulatedPosition;
                    this.updateDisplay();
                    this.updateMap();
                    this.showNotification('オフラインシミュレーションを開始しました', 'info');
                } else {
                    this.showNotification('シミュレーションを終了しました', 'info');
                    this.updateConnectionStatus();
                }
                
                this.updateConnectionStatus();
            }
            
            // データ管理
            loadSavedData() {
                this.savedLocations = this.loadFromLocalStorage('locationHistory') || [];
                this.updateHistoryDisplay();
                this.updateStats();
                
                // 最後の位置情報を読み込み
                const lastPos = this.loadFromLocalStorage('lastPosition');
                if (lastPos) {
                    this.currentPosition = lastPos;
                    this.updateDisplay();
                    this.updateMap();
                }
            }
            
            saveToLocalStorage(key, data) {
                try {
                    localStorage.setItem(key, JSON.stringify(data));
                    return true;
                } catch (e) {
                    console.error('ローカルストレージの保存に失敗:', e);
                    
                    // ストレージがいっぱいの場合、古いデータを削除
                    if (e.name === 'QuotaExceededError') {
                        this.showNotification('ストレージがいっぱいです。古いデータを削除します。', 'warning');
                        this.clearOldData();
                        // 再度試行
                        try {
                            localStorage.setItem(key, JSON.stringify(data));
                            return true;
                        } catch (e2) {
                            this.showNotification('データを保存できませんでした', 'error');
                        }
                    }
                    return false;
                }
            }
            
            loadFromLocalStorage(key) {
                try {
                    const data = localStorage.getItem(key);
                    return data ? JSON.parse(data) : null;
                } catch (e) {
                    console.error('ローカルストレージの読み込みに失敗:', e);
                    return null;
                }
            }
            
            clearOldData() {
                // 古い履歴を削除（新しいものから50件を保持）
                if (this.savedLocations.length > 50) {
                    this.savedLocations = this.savedLocations.slice(0, 50);
                    this.saveToLocalStorage('locationHistory', this.savedLocations);
                    this.updateHistoryDisplay();
                }
            }
            
            clearCache() {
                if (confirm('すべてのキャッシュデータを削除しますか？保存した位置情報もすべて失われます。')) {
                    localStorage.clear();
                    this.savedLocations = [];
                    this.currentPosition = null;
                    this.updateHistoryDisplay();
                    this.updateStats();
                    this.updateDisplay();
                    this.showNotification('キャッシュを削除しました', 'info');
                }
            }
            
            exportData() {
                if (this.savedLocations.length === 0) {
                    this.showNotification('エクスポートするデータがありません', 'warning');
                    return;
                }
                
                const data = {
                    app: 'OfflineGPSTracker',
                    version: '1.0',
                    exportedAt: new Date().toISOString(),
                    totalLocations: this.savedLocations.length,
                    locations: this.savedLocations,
                    currentPosition: this.currentPosition
                };
                
                const blob = new Blob([JSON.stringify(data, null, 2)], { type: 'application/json' });
                const url = URL.createObjectURL(blob);
                const a = document.createElement('a');
                a.href = url;
                a.download = `gps-data-${new Date().toISOString().slice(0, 10)}.json`;
                document.body.appendChild(a);
                a.click();
                document.body.removeChild(a);
                URL.revokeObjectURL(url);
                
                this.showNotification('データをエクスポートしました', 'success');
            }
            
            showImportModal() {
                document.getElementById('importModal').classList.remove('hidden');
            }
            
            hideImportModal() {
                document.getElementById('importModal').classList.add('hidden');
                document.getElementById('importDataText').value = '';
            }
            
            importData() {
                const importText = document.getElementById('importDataText').value.trim();
                
                if (!importText) {
                    this.showNotification('データを入力してください', 'warning');
                    return;
                }
                
                try {
                    const data = JSON.parse(importText);
                    
                    // データ形式の検証
                    if (!data.locations || !Array.isArray(data.locations)) {
                        throw new Error('無効なデータ形式です');
                    }
                    
                    // 現在のデータにマージ
                    const newLocations = data.locations.filter(newLoc => {
                        return !this.savedLocations.some(existingLoc => 
                            existingLoc.id === newLoc.id ||
                            (Math.abs(existingLoc.latitude - newLoc.latitude) < 0.0001 &&
                             Math.abs(existingLoc.longitude - newLoc.longitude) < 0.0001 &&
                             existingLoc.savedAt === newLoc.savedAt)
                        );
                    });
                    
                    this.savedLocations = [...newLocations, ...this.savedLocations].slice(0, 100);
                    this.saveToLocalStorage('locationHistory', this.savedLocations);
                    
                    this.updateHistoryDisplay();
                    this.updateStats();
                    this.hideImportModal();
                    
                    this.showNotification(`${newLocations.length}件のデータを入力しました`, 'success');
                    
                } catch (error) {
                    this.showNotification(`データの入力に失敗: ${error.message}`, 'error');
                }
            }
            
            // Service Worker設定
            setupServiceWorker() {
                if ('serviceWorker' in navigator && !this.isSimulatingOffline) {
                    // Service Workerコードを動的に生成
                    const swCode = `
                        const CACHE_NAME = 'offline-gps-v2.0';
                        const OFFLINE_URL = '/';
                        
                        self.addEventListener('install', event => {
                            event.waitUntil(
                                caches.open(CACHE_NAME).then(cache => {
                                    return cache.addAll([OFFLINE_URL]);
                                }).then(() => self.skipWaiting())
                            );
                        });
                        
                        self.addEventListener('activate', event => {
                            event.waitUntil(
                                caches.keys().then(cacheNames => {
                                    return Promise.all(
                                        cacheNames.map(cacheName => {
                                            if (cacheName !== CACHE_NAME) {
                                                return caches.delete(cacheName);
                                            }
                                        })
                                    );
                                }).then(() => self.clients.claim())
                            );
                        });
                        
                        self.addEventListener('fetch', event => {
                            if (event.request.mode === 'navigate') {
                                event.respondWith(
                                    fetch(event.request).catch(() => {
                                        return caches.match(OFFLINE_URL);
                                    })
                                );
                            }
                        });
                    `;
                    
                    // BlobからService Workerを登録
                    try {
                        const blob = new Blob([swCode], { type: 'application/javascript' });
                        const swURL = URL.createObjectURL(blob);
                        
                        navigator.serviceWorker.register(swURL)
                            .then(registration => {
                                console.log('Service Worker登録成功:', registration.scope);
                            })
                            .catch(error => {
                                console.log('Service Worker登録失敗:', error);
                            });
                    } catch (error) {
                        console.log('Service Workerの設定に失敗:', error);
                    }
                }
            }
            
            // バックグラウンド更新
            startBackgroundUpdates() {
                // 定期的な状態更新
                setInterval(() => {
                    this.updateStats();
                    
                    // オンライン状態を確認
                    const newOnlineStatus = navigator.onLine;
                    if (newOnlineStatus !== this.isOnline && !this.isSimulatingOffline) {
                        this.isOnline = newOnlineStatus;
                        this.updateConnectionStatus();
                    }
                }, 5000);
            }
            
            saveBeforeUnload() {
                if (this.currentPosition) {
                    this.saveToLocalStorage('lastPosition', this.currentPosition);
                }
            }
            
            // ユーティリティ関数
            getModeText(mode) {
                const modes = {
                    'manual': '手動取得',
                    'tracking': '追跡中',
                    'simulated': 'シミュレーション',
                    'online': 'オンライン',
                    'offline': 'オフライン',
                    'cached': 'キャッシュ'
                };
                return modes[mode] || mode;
            }
            
            showNotification(message, type = 'info', duration = 3000) {
                const notification = document.getElementById('notification');
                const title = document.getElementById('notificationTitle');
                const msg = document.getElementById('notificationMessage');
                const icon = document.getElementById('notificationIcon');
                
                // タイトルを設定
                const titles = {
                    'success': '成功',
                    'error': 'エラー',
                    'warning': '警告',
                    'info': '情報'
                };
                
                // アイコンを設定
                const icons = {
                    'success': 'check-circle',
                    'error': 'exclamation-circle',
                    'warning': 'exclamation-triangle',
                    'info': 'info-circle'
                };
                
                title.textContent = titles[type] || '通知';
                msg.textContent = message;
                icon.innerHTML = `<i class="fas fa-${icons[type] || 'info-circle'}"></i>`;
                
                // タイプに応じたクラスを設定
                notification.className = `notification notification-${type}`;
                notification.classList.remove('hidden');
                notification.classList.add('show');
                
                // 自動非表示
                setTimeout(() => {
                    notification.classList.remove('show');
                    setTimeout(() => {
                        notification.classList.add('hidden');
                    }, 600);
                }, duration);
            }
        }
        
        // ===== アプリケーションの初期化 =====
        document.addEventListener('DOMContentLoaded', () => {
            try {
                // GPSトラッカーのインスタンスを作成
                window.gpsTracker = new OfflineGPSTracker();
                
                // スタートアップメッセージ
                console.log('オフラインGPSアプリケーションが正常に起動しました');
                
            } catch (error) {
                console.error('アプリケーションの起動に失敗:', error);
                alert('アプリケーションの起動に失敗しました。コンソールを確認してください。');
            }
        });
        
        // ===== グローバルヘルパー関数 =====
        function formatCoordinate(coord) {
            return parseFloat(coord).toFixed(6);
        }
        
        function calculateDistance(lat1, lon1, lat2, lon2) {
            const R = 6371e3; // 地球の半径 (メートル)
            const φ1 = lat1 * Math.PI/180;
            const φ2 = lat2 * Math.PI/180;
            const Δφ = (lat2-lat1) * Math.PI/180;
            const Δλ = (lon2-lon1) * Math.PI/180;
            
            const a = Math.sin(Δφ/2) * Math.sin(Δφ/2) +
                    Math.cos(φ1) * Math.cos(φ2) *
                    Math.sin(Δλ/2) * Math.sin(Δλ/2);
            const c = 2 * Math.atan2(Math.sqrt(a), Math.sqrt(1-a));
            
            return R * c; // メートル
        }
        
        // ===== ページ表示完了時の処理 =====
        window.onload = function() {
            // ローディング完了メッセージ
            console.log('ページの読み込みが完了しました');
            
            // 位置情報が許可されているか確認
            if (navigator.geolocation) {
                navigator.geolocation.getCurrentPosition(
                    function(position) {
                        console.log('位置情報の許可を確認: OK');
                    },
                    function(error) {
                        console.warn('位置情報の許可が必要です:', error.message);
                    },
                    { enableHighAccuracy: false, timeout: 5000 }
                );
            }
        };
    </script>
</body>
</html>
